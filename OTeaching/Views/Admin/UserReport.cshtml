@model IEnumerable<OTeaching.Models.UserViewModel>
@{
    ViewBag.Title = "UserReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>UserReport</h2>
<hr />

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Photo</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Mobile</th>
                <th scope="col">Branch</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">Pincode</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var staff in Model)
            {
                var imagePath = "/Uploads/Profile/" + staff.Image;
                <tr>
                    <td scope="row"> <img style="width:50px;height:50px" src="@imagePath" alt="Alternate Text" />  </td>
                    <td><span> @staff.Name</span></td>
                    <td>@staff.Email</td>
                    <td>@staff.Mobile</td>
                    <td>@staff.Course</td>
                    <td>@staff.Address</td>
                    <td>@staff.City</td>
                    <td>@staff.Pincode</td>
                    <td>@Html.ActionLink("Delete", "DeleteUser", "Admin", routeValues: new { sid = staff.SID }, htmlAttributes: null)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>There is no record found.</h3>
}





@model IEnumerable<OTeaching.Models.FeedbackViewModel>
@{
    ViewBag.Title = "ViewFeedback";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ViewFeedback</h2>
<hr />

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Mobile</th>
                <th scope="col">Feedback</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feedback in Model)
            {
            <tr>

                <td> @feedback.Name</td>
                <td> @feedback.Email</td>
                <td>@feedback.Mobile</td>
                <td>@feedback.FeedbackText</td>
                <td>@Html.ActionLink("Delete", "DeleteFeedback", "Admin", routeValues: new { fid = feedback.FID }, htmlAttributes: null)</td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>There is no record found.</h3>
}

